<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="231dp"
        android:animateLayoutChanges="true"
        android:background="#9DF1E9"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iconoImagen"
                android:layout_width="99dp"
                android:layout_height="107dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:src="@drawable/netflix"

                />


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="193dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="-193dp"
                android:layout_toStartOf="@+id/ValorPLan"
                android:layout_toEndOf="@+id/iconoImagen"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombrePlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:text="Netflix"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nombrePlanDescrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:text="plan durante 30 dias para toda la familia"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/CompradorPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6sp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:text="Activar por 30 dÃ­as"
                    android:textColor="@color/black"
                    android:textSize="16dp"

                    />


            </LinearLayout>

            <TextView
                android:id="@+id/ValorPLan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="2dp"
                android:text="5 USD"
                android:textColor="@color/black"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/codigoPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"

                />

        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>